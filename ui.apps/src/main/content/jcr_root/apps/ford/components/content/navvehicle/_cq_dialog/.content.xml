<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Vehicle Details Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">

    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <vehicleDetailsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Vehicle Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <vehicleImage
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Vehicle Image"
                                name="./vehicleImage"
                                rootPath="/content/dam"
                                required="{Boolean}true"
                                description="Select the image for the vehicle" />
                            <vehicleTitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Vehicle Title"
                                name="./vehicleTitle"
                                required="{Boolean}true"
                                description="Enter the title for the vehicle"
                                maxlength="50" />
                            <priceDescription
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Price Description"
                                name="./priceDescription"
                                required="{Boolean}false"
                                description="Enter the price description for the vehicle"
                                maxlength="100" />
                            <vehicleCategory
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                fieldLabel="Vehicle Category"
                                name="./vehicleCategory"
                                required="{Boolean}false"/>
                            <path
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                fieldLabel="Navigation Path"
                                name="./path"
                                rootPath="/content"
                                required="{Boolean}false"
                                description="Select the navigation path for the vehicle" />
                        </items>
                    </vehicleDetailsTab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>