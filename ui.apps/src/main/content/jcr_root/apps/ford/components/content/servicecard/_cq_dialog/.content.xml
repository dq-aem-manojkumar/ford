<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Service Card Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">

    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <serviceCardTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Service Card Configuration"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <serviceCardMultifield
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
    
                                composite="{Boolean}true">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    name="./serviceCards"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                    <items jcr:primaryType="nt:unstructured">
                                        <serviceCardIcon
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Service Card Icon"
                                            name="serviceCardIcon"
                                            rootPath="/content/dam"
                                            required="{Boolean}true"
                                            description="Select the icon for the service card" />
                                        <serviceCardTitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Title"
                                            name="serviceCardTitle"
                                            required="{Boolean}true"
                                            description="Enter the title for the service card" />
                                        <serviceCardDescription
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                            fieldLabel="Description"
                                            name="serviceCardDescription"
                                            required="{Boolean}false"
                                            description="Enter the description for the service card" />
                                        <serviceCardPath
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Path to Navigate"
                                            name="serviceCardPath"
                                            rootPath="/content"
                                            required="{Boolean}true"
                                            description="Select or enter the path to navigate" />
                                    </items>
                                </field>
                            </serviceCardMultifield>
                            
                        </items>
                    </serviceCardTab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>