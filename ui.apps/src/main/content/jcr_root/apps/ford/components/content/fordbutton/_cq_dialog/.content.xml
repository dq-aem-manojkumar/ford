<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Ford Button"
    sling:resourceType="cq/gui/components/authoring/dialog">

    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">

                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">

                                            <!-- Button Text -->
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Button Text"
                                                name="./text"
                                                required="{Boolean}true"
                                                emptyText="Enter button text" 
                                                maxlength="20"/>

                                            <!-- Button Link -->
                                            <link
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Button Link"
                                                name="./link"
                                                rootPath="/content/ford"
                                                emptyText="Enter or browse a page" />

                                            <!-- Background Color -->
                                            <backgroundColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Background Color"
                                                name="./backgroundColor"
                                                emptyText="transparent" />

                                            <!-- Text Color -->
                                            <textColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Text Color"
                                                name="./textColor"
                                                emptyText="#000000" />

                                            <!-- Padding -->
                                            <padding
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Padding (e.g., 10px 20px)"
                                                name="./padding"
                                                emptyText="10px 20px" />
                                            <margin
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="margin (e.g., 10px 20px)"
                                                name="./margin"
                                                emptyText="10px 20px" />

                                            <!-- Width -->
                                            <width
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Width (e.g., auto or 200px)"
                                                name="./width"
                                                emptyText="auto" />

                                            <!-- Height -->
                                            <height
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Height (e.g., auto or 50px)"
                                                name="./height"
                                                emptyText="auto" />


                                            <!-- Border Color -->
                                            <borderColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"
                                                fieldLabel="Border Color"
                                                name="./borderColor" />

                                            <!-- Border Size -->
                                            <borderSize
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Border Size (e.g., 1px, 0.1px)"
                                                name="./borderSize"
                                                emptyText="1px" />

                                            <!-- Border Radius -->
                                            <borderRadius
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                fieldLabel="Border Radius (e.g., 4px)"
                                                name="./borderRadius" />

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>

                </items>
            </tabs>
        </items>
    </content>
</jcr:root>